<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.thingslink</groupId>
		<artifactId>thingslink-modules-system</artifactId>
		<version>${revision}</version>
	</parent>

	<artifactId>thingslink-system-biz</artifactId>

	<dependencies>
		<!-- SpringCloud Alibaba Nacos -->
		<dependency>
			<groupId>com.alibaba.cloud</groupId>
			<artifactId>spring-cloud-starter-alibaba-nacos-discovery</artifactId>
		</dependency>

		<!-- SpringCloud Alibaba Nacos Config -->
		<dependency>
			<groupId>com.alibaba.cloud</groupId>
			<artifactId>spring-cloud-starter-alibaba-nacos-config</artifactId>
		</dependency>

		<!-- Sentinel -->
		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-sentinel</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-security</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-system-api</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-auth-api</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-file-api</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-seata</artifactId>
		</dependency>

		<!-- thingslink Common DataSource -->
		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-datasource</artifactId>
		</dependency>

		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-web</artifactId>
		</dependency>

		<!-- thingslink Common ORM -->
		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-orm</artifactId>
		</dependency>

		<!-- thingslink Common Log -->
		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-log</artifactId>
		</dependency>

		<!-- thingslink Common Swagger -->
		<dependency>
			<groupId>com.thingslink</groupId>
			<artifactId>thingslink-common-swagger</artifactId>
		</dependency>

		<dependency>
			<groupId>com.xuxueli</groupId>
			<artifactId>xxl-job-core</artifactId>
		</dependency>

	</dependencies>


	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring-boot.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
